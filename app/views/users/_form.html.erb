<%= form_for(@user) do |f| %>
	<% if @user.errors.any? %>
		<ul>
		<% @user.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
		</ul>
	<% end %>

	<div class="field">
	<%= f.label :username %>
	<%= f.text_field :username %>
	</div>

	<div class="field">
	<%= f.label :password %>
	<%= f.text_field :password %>
	</div>

	<div class="submit">
	<%= f.submit %>
	</div>
<% end %>