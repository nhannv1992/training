<h1>Listing Todo</h1>
<%= notice %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.name %></td>
        <td><%= todo.status %></td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_todo_path %>

<div id="showTodo"></div>

<div id="updateForm">
  <p>Name: <input type="text" id="todoName" /></p>
  <p>Completed? : <input type="checkbox" id="todoStatus" /></p>


  <button id="add">Add</button>
  <button id="update">Update</button>
  <button id="delete">Delete</button>
</div>